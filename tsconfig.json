{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "baseUrl": ".",
    "lib": [
      "ES2021.String"
    ],
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
